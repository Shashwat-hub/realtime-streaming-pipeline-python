# ── Producer ──────────────────────────────────
BATCH_SIZE=5
SLEEP_INTERVAL=1.0
PRODUCER_RUN_DURATION=30

# ── Consumer ──────────────────────────────────
MAX_RETRIES=3
CONSUMER_RUN_DURATION=35

# ── KPI Thresholds (value > threshold → degraded)
THRESHOLD_TEMPERATURE=80.0
THRESHOLD_HUMIDITY=70.0
THRESHOLD_PRESSURE=1050.0
THRESHOLD_VIBRATION=5.0

